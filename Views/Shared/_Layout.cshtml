<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Receitas de Sucesso</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,300;0,700;0,900;1,400;1,600&display=swap" rel="stylesheet">
    <link href="https://cdn.materialdesignicons.com/5.1.45/css/materialdesignicons.min.css" rel="stylesheet">

</head>
<body id="bodyid">
    <header>
        <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-fixed-top zindex">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imgs/sources/logo-completo.svg" height="37" class="d-inline-block align-top" alt=""></a>
                </a>
                <button id="botaonav" class="navbar-toggler btn-site" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="cor-texto-branco"><i class="mdi mdi-menu"></i></span>
                </button>
                    <ul class="navbar-nav navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <li class="">
                            <a class="nav-link text-light" asp-area="" asp-controller="Categoria" asp-action="Cadastrar">Cadastrar categoria</a>
                        </li>
                        <li class="">
                            <a class="nav-link text-light" asp-area="" asp-controller="Receita" asp-action="Cadastrar">Cadastrar receita</a>
                        </li>
                        <li class="">
                            <a class="nav-link text-light" asp-area="" asp-controller="Receita" asp-action="Listar">Consultar receitas</a>
                        </li>
                        <li class="">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
        </nav>
    </header>
    <div>
        <main id="mainid" role="main">
            @RenderBody()
        </main>
    </div>

     <script 
            src="https://code.jquery.com/jquery-3.3.1.slim.min.js" 
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" 
            crossorigin="anonymous"></script>
    <script 
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" 
            integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" 
            crossorigin="anonymous"></script>
    <script 
            src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" 
            integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" 
            crossorigin="anonymous"></script>
        <script src="~/js/site.js" asp-append-version="true" defer></script>
        <script src="~/js/site.min.js" asp-append-version="true" defer></script>

    @RenderSection("Scripts", required: false)

</body>
    <footer>
        <div class="d-flex flex-column flex-md-row">
            <div class="mt-4 ml-3">
                <img src="~/imgs/sources/logo-completo.svg" alt="">
            </div>
            <div class="mt-4 mb-4 ml-3">
                <a class="footer" asp-action="Index">Home</a><br>
                <a class="footer" asp-action="Listar" asp-controller="Receita">Consultar receitas</a><br>
                <a class="footer" asp-action="Cadastrar" asp-controller="Receita">Cadastrar receita</a><br>
                <a class="footer" asp-action="Cadastrar" asp-controller="Categoria">Cadastrar categoria</a><br>
            </div>
        </div>
    </footer>
</html>

