@model ReceitasDeSucesso.Models.Receita

@{
    ViewData["Title"] = "Consulta de Receita";
}

<div class="container">
    <h1>Consultar Receita</h1>
    <h4>Receita @Model.Titulo </h4>
    <div>
        <img src="~/imgs/@Model.Imagem"   
                         height="50" width="50"   
                         asp-append-version="true" >
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredientes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModoDePreparo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModoDePreparo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </dd>
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descricao)
        </dd>
    </dl>

    <hr>
    <div>
        @Html.ActionLink("Editar", "Editar", new { id = @Model.ID }) |
        <a asp-action="Listar">Voltar para Lista</a>
    </div>
</div>

