@model IEnumerable<Receita>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="mt-4">
        <h2>Receitas</h2>
    </div>

    @foreach (var receita in Model)
    {
        <div class="card mt-3 mb-3 mw-100">
            <div class="card-body flex-column flex-md-row">
                <div class="col-sm-4">
                    <img class="mr-3 align-self-start rounded float-left img-consulta" src="~/imgs/@receita.Imagem" alt="">
                </div>
                <div class="col-sm-8">
                    <h3 class="card-title">
                        @receita.Titulo
                    </h3>
                    <p class="card-text">
                        @receita.Descricao
                    </p>
                    <p class="card-text">
                        <small class="text-muted">Tags: @receita.Tags</small>
                    </p>
                    <a asp-action="Consultar" asp-route-id="@receita.ID" class="btn btn-md btn-site">Ver receita</a>
                </div>
            </div>

        </div>
    }
</div>

