@model IEnumerable<Receita>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <ul class="list-unlysted list-group-flush">
        @foreach (var receita in Model)
        {
            <li class="list-group-item">
                <div class="media">
                    <img class="mr-3 align-self-start rounded float-left" src="~/imgs/@receita.Imagem" height="100" width="100" alt="">
                    <div class="media-body"> 
                        <h5 class="mt-0 mb-1">@receita.Titulo</h5>
                        <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Descricao)
                            </dt>
                            <dd class = "col-sm-10">
                                @receita.Descricao
                            </dd>
                        </dl>
                    </div>
                </div>
            </li>
        }
    </ul>

